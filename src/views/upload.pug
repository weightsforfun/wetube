extends base.pug

block content 
    if errorMessage
        span=errorMessage
    form(method="POST",action="/videos/upload" enctype="multipart/form-data")
        label(for="video") Video Upload 
        input(type="file" accept="video/*" required id="video" name="video") 
        input(placeholder="Title",required,type="text" name="title" maxlength=80)
        input(placeholder="Description",required,type="text" name="description")
        input(placeholder="Hashtags , seperated by comma",required,type="text" name="hashtags")
        input(type="submit",value="Upload video" )