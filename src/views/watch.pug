extends base.pug

block content 
    div#videoContainer(data-id=video._id)
        video(src="/"+video.fileUrl, controls) 
        div#videoControls
            button#play Play
            button#mute Mute
            input(type="range",step="0.1", value=0.5, min="0", max="1")#volume
            div 
                span#currentTime 00:00
                span  /  
                span#totalTime 
            div    
                input(type="range",step="1", value=0, min="0")#timeLine
            div 
                button#fullscreenBtn fullscreen
    div 
        p=video.description
        p=video.hashtags
        small=video.createdAt
    div 
        a(href=`/users/${video.owner._id}`)  Uploaded by #{video.owner.name}
    div 
        p=video.meta.views
    if String(video.owner._id) === String (loggedInUser._id)
        a(href=`${video.id}/edit`) Edit video &rarr; 
        br
        a(href=`${video.id}/delete`) Delete video &rarr; 
    if loggedIn     
        div.video_add_comments
            form.video_comments_form#commentForm
                textarea(cols="30", rows="10" placeholder="Write a nice comment...")
                button Add Comment  
    div.video_comments
        ul 
            each comment in video.comments.reverse()
                li.video_comment#commentContents(data-id=comment._id)
                    span=comment.owner.username 
                    span  :   
                    span=comment.text 
                    if String(comment.owner._id) === String (loggedInUser._id)
                        button.video_comment_delete_button(data-id=comment._id , data-owner=comment.owner._id) ‚ùå
               

block scripts 
    script(src="/static/js/videoPlayer.js") 
    if loggedIn 
        script(src="/static/js/commentSection.js")